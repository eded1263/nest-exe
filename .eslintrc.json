{
    "env": {
        "browser": true,
        "es2020": true,
        "jest": true
    },
    "extends": [
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
        "max-len": [2, 120],
        "import/prefer-default-export": [0]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js"],
                "moduleDirectory": ["node_modules"]
            }
        }
    }
}
